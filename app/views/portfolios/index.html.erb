<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Minhas Carteiras</h1>


<% if @portfolios.any? %>
  <table>
    <thead>
      <tr>
        <th>Initial amount</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @portfolios.each do |portfolio| %>
        <tr>
          <td><%= portfolio.initial_amount %></td>
          <td><%= portfolio.user %></td>
          <td><%= link_to 'Show', portfolio %></td>
          <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
          <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Criar nova carteira', new_portfolio_path, class:"btn btn-dark btn-lg" %>
<% else %>
  <div class="" style="margin: 2rem 0">
    <p>Você ainda não possui nenhuma carteira. Para iniciar uma, clique no botão abaixo.</p>

  </div>
  <%= link_to 'Criar nova carteira', new_portfolio_path, class:"btn btn-dark btn-lg" %>
<% end %>

</div>
